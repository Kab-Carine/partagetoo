{% extends "base.html.twig" %}


{% block body %}
    <!DOCTYPE html>
    <html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #f0f0f0;
            }
            .container {
                width: 80%;
                margin: 0 auto;
                padding: 10px;
            }
            header {
                background-color: #008080;
                color: #fff;
                padding: 30px;
                text-align: right;
            }
            h1 {
                margin-top: 0;
            }
            nav {
                text-align: center;
                margin-bottom: 20px;
            }
            nav a {
                color: #333;
                text-decoration: none;
                padding: 10px 20px;
                background-color: #ddd;
                border-radius: 10px;
                margin: 0 5px;
            }
            nav a:hover {
                background-color: red;
                color: #fff;
            }

            footer {
                background-color: #008080;
                color: #fff;
                padding: 25px 0;
                text-align: center;
                position: fixed;
                bottom: 0;
                width: 100%;
            }
            .liste_ad{

            }
            .liste{
                background-color:#dbeafe;
                width: 70%;
                margin: auto;
                padding: 20px;
            ;
            }
            .search-container {
                flex: 1;
                margin-left: 10px;
            }
            .search-box {
                width: 15%;
                padding: 15px;
                border-radius: 5px;
                border: none;
            }
            .search-button {
                padding: 8px 20px;
                border: none;
                background-color: #555;
                color: #fff;
                border-radius: 5px;
                cursor: pointer;
            }

        </style>
    </head>
    <body>
    <header>
        <div class="search-container">

        </div>
        <nav>
            <a href="#">Accueil</a>
            <a href="#">Annonces</a>
            <input type="text" placeholder="Rechercher annonce..." class="search-box">
            <button type="button" class="search-button">Rechercher</button>

        </nav>

    </header>

    <div class="liste_ad">
            {% for ad in ads %}
                <ul>
                   <div class="liste">
                       <h2>{{ ad.title }}</h2>
                       <p>{{ ad.description }}</p>
                   </div>

                </ul>
            {% endfor %}
    </div>
    <footer>
        <div class="col-lg-6">
            <div class="copyright__text">
                <p>Copyright & Design By <span>Carine</span> - 2024</p>

            </div>
        </div>
    </footer>
    </body>
    </html>
{% endblock %}

